@model PracticePackFront.Models.User

@section HeadContent{
  <link rel="stylesheet" href="~/css/account-style.css" />
}

@{
    IEnumerable<object> Branches = (IEnumerable<object>)ViewData["Branches"];
    ViewData["Title"] = "View";
}

<div class="box-content">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-controller="User" asp-action="Index">Account</a>
            </li>
        </ol>
    </nav>
    <h1>Account</h1>
    <hr />
    <form asp-action="Index" method="post" class="account-container">
        <div class="form-validation text-danger" asp-validation-summary="ModelOnly"></div>
        <nav class="account-settings">
            <ul>
                <li class="personal-data-setting active">Personal Data</li>
                <li class="security-setting">Security</li>
                <li class="branch-setting">Branch Data</li>
                <li onclick="location.href = '@Url.Action("Index","Address")'">Adresses</li>
                <li onclick="location.href = '@Url.Action("Index","Card")'">Payment Methods</li>
                <li onclick="location.href = '@Url.Action("Index","Package")'">My Packages</li>
                <li class="configuration-setting">Configuration</li>
            </ul>
        </nav>
        <div class="setting-content">
            <div class="personal-data-setting setting active">
                <h2>Personal Data</h2>
                <div class="form-group hide">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <ul>
                    <li class="name-info">
                        <div class="view">
                            <div class="data">
                                <p><b>Name:</b></p>
                                <p class="data-value">@Model.Name</p>
                            </div>
                            <div class="operation">
                                <button type="button" class="name-show-edit">Edit</button>
                            </div>
                        </div>
                        <div class="edit">
                            <div class="data">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="operation">
                                <div class="btn-cancel text-primary name-cancel">Cancel</div>
                                <input type="submit" value="Save" class="name-change btn btn-primary" />
                            </div>
                        </div>
                    </li>
                    <li class="lastname-info">
                        <div class="view">
                            <div class="data">
                                <p><b>Last Name:</b></p>
                                <p class="data-value">@Model.LastName</p>
                            </div>
                            <div class="operation">
                                <button type="button" class="lastname-show-edit">Edit</button>
                            </div>
                        </div>
                        <div class="edit">
                            <div class="data">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="operation">
                                <div class="btn-cancel text-primary lastname-cancel">Cancel</div>
                                <input type="submit" value="Save" class="lastname-change btn btn-primary" />
                            </div>
                        </div>
                    </li>
                    <li class="cedula-info">
                        <div class="view">
                            @if(Model.Cedula != null)
                            {
                                <div class="data">
                                    <p><b>Cedula:</b></p>
                                    <p class="data-value">@Model.Cedula</p>
                                </div>
                                <div class="operation">
                                    <button type="button" class="cedula-edit">Edit</button>
                                </div>
                            }
                            else {
                                <div class="no-data">
                                    <p><b>Cedula:</b></p>
                                    <p>You have not registered your cedula yet</p>
                                </div>
                                <div class="operation">
                                    <button type="button" class="cedula-add">Add</button> 
                                </div>
                            }
                        </div>
                        <div class="edit">
                            <div class="data">
                                <label asp-for="Cedula" class="control-label"></label>
                                <input asp-for="Cedula" class="form-control" />
                                <span asp-validation-for="Cedula" class="text-danger"></span>
                            </div>
                            <div class="operation">
                                <div class="btn-cancel text-primary cedula-cancel">Cancel</div>
                                <input type="submit" value="Save" class="cedula-change btn btn-primary" />
                            </div>
                        </div>
                    </li>
                    <li class="telephone-info">
                        <div class="view">
                            @if(Model.Telephone != null)
                            {
                                <div class="data">
                                    <p><b>Telephone:</b></p>
                                    <p class="data-value">@Model.Telephone</p>
                                </div>
                                <div class="operation"> 
                                    <button type="button" class="telephone-edit">Edit</button>
                                </div>
                            }
                            else {
                                <div class="no-data">
                                    <p><b>Telephone:</b></p>
                                    <p>You have not registered a phone yet</p>
                                </div>
                                <div class="operation">
                                    <button type="button" class="telephone-add">Add</button> 
                                </div>
                            }
                        </div>
                        <div class="edit">
                            <div class="data">
                                <label asp-for="Telephone" class="control-label"></label>
                                <input asp-for="Telephone" class="form-control" />
                                <span asp-validation-for="Telephone" class="text-danger"></span>
                            </div>
                            <div class="operation">
                                <div class="btn-cancel text-primary telephone-cancel">Cancel</div>
                                <input type="submit" value="Save" class="telephone-change btn btn-primary" />
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="security-setting setting">
                <h2>Login & Security</h2>
                <ul>
                    <li class="mail-info">
                        <div class="view">
                            <div class="data">
                                <p><b>Mail:</b></p>
                                <p class="data-value">@Model.Mail</p>
                            </div>
                            <div class="operation">
                                <button type="button" class="mail-show-edit">Edit</button>
                            </div>
                        </div>
                        <div class="edit">
                            <div class="data">
                                <label asp-for="Mail" class="control-label"></label>
                                <input asp-for="Mail" class="form-control" />
                                <span asp-validation-for="Mail" class="text-danger"></span>
                            </div>
                            <div class="operation">
                                <div class="btn-cancel text-primary mail-cancel">Cancel</div>
                                <input type="submit" value="Save" class="mail-change btn btn-primary" />
                            </div>
                        </div>
                    </li>
                    <li class="password-info">
                        <div class="view">
                            <div class="data">
                                <p><b>Password:</b></p>
                                <p>************</p>
                            </div>
                            <div class="operation">
                                <button type="button" class="password-show-edit">Edit</button>
                            </div>
                        </div>
                        <div class="edit">
                            <div class="data">
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword" class="control-label"></label>
                                    <input asp-for="ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="operation">
                                <div class="btn-cancel text-primary password-cancel">Cancel</div>
                                <input type="submit" value="Save" class="password-change btn btn-primary" />
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="branch-setting setting">
                <h2>My Branch</h2>
                <ul>
                    <li class="branch-info">
                        <div class="view">
                            @if(Model.Branch != null)
                            {
                                <div class="data">
                                    <p><b>Branch:</b></p>
                                    <p class="data-value hide">@Model.BranchId</p>
                                    <p>@Model.Branch.Name</p>
                                    <p>@Model.Branch.Line1 , @Model.Branch.City</p>
                                    <p>@Model.Branch.Province, @Model.Branch.Country</p>
                                </div>
                                <div class="operation">
                                    <button type="button" class="branch-edit">Edit</button>
                                </div>
                            }
                            else {
                                <div class="no-data">
                                    <p><b>Branch:</b></p>
                                    <p>You have not selected a branch yet</p>
                                </div>
                                <div class="operation">
                                    <button type="button" class="branch-add">Add</button> 
                                </div>
                            }
                        </div>
                        <div class="edit">
                            <div class="data">
                                <label asp-for="Branch" class="control-label"></label>
                                @Html.DropDownListFor(model => Model.BranchId, new SelectList(Branches, "Id", "Name", ViewData["Branches"]),
                                "Select a branch", new { @class = "ips-property-parameter form-control" })
                                <span asp-validation-for="Branch" class="text-danger"></span>
                            </div>
                            <div class="operation">
                                <div class="btn-cancel text-primary branch-cancel">Cancel</div>
                                <input type="submit" value="Save" class="branch-change btn btn-primary" />
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="configuration-setting setting">
                <h2>Configurations</h2>
                <ul>
                    <li class="configuration-info configuration">
                        <div class="view">
                            <div class="data">
                                <p><b>Delete User:</b></p>
                                <p>If you take this action, your information will not be able to be recovered again.</p>
                            </div>
                            <div class="operation">
                                <button  type="button" class="configuration-op btn-delete"
                                onclick="location.href = '@Url.Action("Delete","User", new { id = @Model.Id})'">Delete</button>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </form>
    <div class="controller-actions form-group">
        <a asp-controller="Home" asp-action="Index">Back</a>
    </div>
</div>

@section Scripts {
    <script src="~/js/account-script.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}