@model IEnumerable<PracticePackFront.Models.Package>

@section HeadContent{
  <link rel="stylesheet" href="~/css/table-style.css" />
}

@{
    ViewData["Title"] = "Index";
}

<div class="box-content">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-controller="Package" asp-action="Index">Packages</a>
            </li>
        </ol>
    </nav>
    <h1>Ordered Packages</h1>
    @if(Model.Count() > 0)
    {
        <table class="package-container table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ArrivalDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr onclick="location.href = '@Url.Action("Details","Package", new { id = item.Id })'">
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArrivalDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="no-content">
            <p>No tiene ningun paquete registrado</p>
        </div>
    }
    <div class="controller-actions form-group">
        <a asp-controller="Home" asp-action="Index">Back</a>
    </div>
</div>